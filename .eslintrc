{
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "plugins": [ "react" ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unexpected-multiline": "error",
    "quotes": ["error", "single", { "avoidEscape": true }],
    "comma-dangle": ["error", "never"]
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  }
}
